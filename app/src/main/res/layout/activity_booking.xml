<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.uscrecapp_team28.BookingActivity"
    android:orientation="vertical"
    android:layout_gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Timeslot"/>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/todaybutton"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Today"
            android:layout_marginRight="5dp"
            android:onClick="onClickToday"/>

        <Button
            android:id="@+id/tomorrowbutton"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginRight="5dp"
            android:text="Second"
            android:onClick="onClickSecond"/>
        <Button
            android:id="@+id/thirdbutton"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Third"
            android:onClick="onClickThird"/>
    </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/TrecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:padding="4dp"
        android:scrollbars="vertical" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/profile_back"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_gravity="top|left"
        android:onClick="onClickMap"
        android:text="Back"
        android:textColor="#fff"
        android:alpha="0.7"/>



</LinearLayout>